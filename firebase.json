{
  "storage": {
    "rules": "storage.rules",
    "cors": [
      {
        "origin": ["http://localhost:8081", "http://localhost:19006"],
        "method": ["GET", "PUT", "POST", "DELETE"],
        "maxAgeSeconds": 3600
      }
    ]
  },

  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}